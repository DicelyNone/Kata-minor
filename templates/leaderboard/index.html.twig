{% extends 'base.html.twig' %}

{% block title %}
    {{ parent()}}
{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <h1>Leaderboard</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
        {% for leader in leaderboard %}
            <tr>
                <td>{{ leader.user }}</td>
                <td>{{ leader.result }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
