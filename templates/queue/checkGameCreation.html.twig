<script>
$(document).ready(function () {
    function runChecker() {
        setTimeout(checkGameStatus, 5000);
    }

    function checkGameStatus() {
        $.ajax({
            type: 'POST',
            url: '/check-status',
            data: [],
            success: function (data) {
                console.log(data['gameStatus']);
                if (data['gameStatus'] === 1){
                    window.location.href = "{{ path('start') }}";
                } else {
                    runChecker();
                }
            },
            dataType: 'json'
        });
    }

    runChecker();
});
</script>